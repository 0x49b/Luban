{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": "airbnb",
    "rules": {
        "default-case": 0,
        "indent": [2, 4],
        "max-len": [1, 120, 2, {ignoreComments: true}],
        "no-cond-assign": [2, "except-parens"],
        "no-else-return": 0,
        "no-param-reassign": 0,
        "no-unused-vars": [1, {"vars": "local", "args": "none"}],
        "quote-props": [1, "consistent-as-needed"],
        "quotes": 0,
        "radix": 0,
        "space-infix-ops": 0,
        "react/jsx-indent-props": [2, 4]
    }
}
