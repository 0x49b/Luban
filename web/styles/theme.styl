// Bootstrap Override
body {
    font-size: 12px;
}
th {
    font-weight: normal;
}
label {
    font-weight: normal;
}
.dropdown-menu {
    font-size: 12px;
}
.navbar-nav > li > a {
    font-size: 14px;
}
.dropdown-menu > li > a:focus {
    outline: none;
}

table thead > tr > th,
table tbody > tr > td {
    text-align: left;
    padding: 2px 4px;
}
.table-bordered > thead > tr > td,
.table-bordered > thead > tr > th {
    border-bottom-width: 1px;
}

// Vertical Spacing for Bootstrap Columns
// https://coderwall.com/p/0jezca/vertical-spacing-for-bootstrap-columns
row {
    &.row-grid {
        [class*="col-"] + [class*="col-"] {
            margin-top: 15px;
        }

        @media (min-width: 1200px) {
            [class*="col-lg-"] + [class*="col-lg-"] {
                margin-top: 0;
            }
        }

        @media (min-width: 992px) {
            [class*="col-md-"] + [class*="col-md-"] {
                margin-top: 0;
            }
        }

        @media (min-width: 768px) {
            [class*="col-sm-"] + [class*="col-sm-"] {
                margin-top: 0;
            }
        }
    }
}
