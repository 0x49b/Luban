[data-component="Header"] {
    .grbl-quick-access-toolbar {
        margin: 10px 0;
        height: 30px;

        [class^="ion-"],
        [class*=" ion-"] {
            &:before {
                font-size: 14px;
            }
            &.mirror:before {
                transform: scaleX(-1);
            }
        }

        .btn-group {
            margin-right: 10px;
        }
        .btn-group:last-child {
            margin-right: 0;
        }
        .btn {
            height: 30px;
        }

        // Remove the outline on buttons
        button:focus {
            outline: none;
        }
    }
}
