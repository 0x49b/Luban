[data-component="Widgets/AxesWidget"] {
    .widget-content {
        position: relative;
        padding: 5px 10px 0 10px;

        .horizontal-mirror {
            transform: scale(-1, 1);
        }

        .toolbar-button {
            position: absolute;
            top: 0;
            right: 10px;
        }

        .display-panel {
            margin-bottom: 10px;

            .active-state {
                margin-bottom: 5px;
            }

            .axis-label {
                text-align: center;
                font-size: 24px;
                padding: 0 10px;
                width: 1%;
            }
            .axis-position {
                padding: 0 5px 10px 5px;
                text-align: right;
                white-space: nowrap;
                position: relative;

                .integer-part,
                .decimal-point,
                .fractional-part {
                    font-size: 24px;
                }
                .integer-part {
                    width: 90px;
                    text-align: right;
                }
                .dimension-unit {
                    font-size: 12px;
                    position: absolute;
                    right: 5px;
                    bottom: 0;
                }
            }
            .axis-control {
                width: 1%;
                padding: 0 4px;
                text-align: center;

                .icon {
                    font-size: 12px;
                }
            }
        }

        .toggle-expand-collapse {
            height: 16px;
            text-align: center;
            background-color: #eee;

            &:hover {
                cursor: pointer;
            }
        }

        .control-panel-toggler,
        .control-panel {
            margin-left: -10px;
            margin-right: -10px;
            border-top: 1px solid #ddd;
            background-color: #eee;
        }
        .control-panel {
            padding: 10px;

            .row {
                margin-right: -10px;
                margin-left: -10px;
                margin-bottom: 10px;

                &:last-child {
                    margin-bottom: 0;
                }

                > [class*="col-"] {
                    padding: 0 10px;
                }
            }

            table.table-centered {
                margin: 0 auto;
            }

            .jog-x,
            .jog-y,
            .jog-z {
                font-size: 24px;
            }
            .jog-x {
                padding: 0 5px;
                .jog-x-minus {
                    margin-left: -5px;
                }
            }
            .jog-y {
                padding: 0;
                .jog-y-plus {
                    margin-bottom: 5px;
                }
            }
            .jog-z {
                padding: 0;
                .jog-z-plus {
                    margin-bottom: 5px;
                }
            }
        }
    }
}
