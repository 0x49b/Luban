[data-component="Widgets/GCodeViewerWidget"] {

    .widget-content {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;

        .btn-toolbar {
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 102;
        }

        .joystick {
            position: absolute;
            top: 5px;
            right: 5px;
            z-index: 102;

            .joystick-button {
                cursor: pointer;
                font-size: 14px;
                padding: 2px 4px;
                color: #777;

                &:hover,
                &:focus {
                    color: #333;
                }
                &:active {
                    color: #333;
                    text-shadow: 0 1px #ccc;
                }
            }
        }

        .stats {
            position: absolute;
            top: 10px;
            right: 0;
            left: 0;
            bottom: auto;
            margin: auto;
            text-align: center;
            z-index: 101;
            background: transparent;

            &.stick-to-bottom {
                top: auto;
                bottom: 10px;
            }
        }

        .dimension {
            display: inline-block;
            padding: 4px 8px;
            background-color: #f0f0f0;
            border: 1px solid #ddd;
            text-align: left;
            text-shadow: 1px 1px 2px rgba(34, 34, 34, .5);
        }

        .preview {
            position: absolute;
            top: 0;
            right: 0;
            left: 0;
            bottom: 0;
            z-index: 0;
        }
    }
}
