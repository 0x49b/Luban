[data-component="Widgets/AxesWidget"] {
    .widget-content {
        position: relative;
        padding: 5px 10px 10px 10px;

        .glyphicon-reset {
            transform: scaleX(-1);
            &:before {
                content: "\e030";
            }
        }

        .toolbar-button {
            position: absolute;
            top: 0;
            right: 10px;
        }

        .display-panel {
            margin-bottom: 10px;

            .active-state {
                margin-bottom: 5px;
            }

            .axis-label {
                text-align: center;
                font-size: 24px;
                padding: 0 10px;
                width: 1%;
            }
            .axis-position {
                padding: 0 5px 10px 5px;
                text-align: right;
                white-space: nowrap;
                position: relative;

                .integer-part,
                .decimal-point,
                .fractional-part {
                    font-size: 24px;
                }
                .integer-part {
                    width: 90px;
                    text-align: right;
                }
                .dimension-unit {
                    font-size: 12px;
                    position: absolute;
                    right: 5px;
                    bottom: 0;
                }
            }
            .axis-control {
                width: 1%;
                padding: 0 4px;
                text-align: center;

                .icon {
                    font-size: 12px;
                }
            }
        }

        .toggle-expand-collapse {
            height: 16px;
            text-align: center;

            &:hover {
                cursor: pointer;
            }
        }

        .control-panel {
            margin-left: -10px;
            margin-right: -10px;

            .form-group:last-child {
                margin-bottom: 0;
            }

            table.table-centered {
                margin: 0 auto;
            }
            table.jog-joystick-control {
                thead > tr > th,
                tbody > tr > td {
                    padding: 2px;
                }
            }
            .rotate-45deg {
                transform: rotate(45deg);
            }
            .rotate--45deg {
                transform: rotate(-45deg);
            }
            [class^="jog-"],
            [class*=" jog-"] {
                font-size: 16px;
                padding: 0;
                width: 36px;
                height: 32px;
                text-align: center;
                vertical-align: middle;
            }

            rotate-45deg {
                transform: rotate(45deg);
            }
            rotate--45deg {
                transform: rotate(-45deg);
            }
        }
    }
}
