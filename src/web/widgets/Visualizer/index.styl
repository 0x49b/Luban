.widget-header {
    min-height: 32px;

    .controller-type {
        display: inline-block;
        font-weight: bold;
        margin-right: 10px;
    }
    .controller-state {
        background-color: #fff;
        border: 1px solid #e3e3e3;
        border-radius: 3px;
        display: inline-block;
        line-height: 24px;
        min-width: 50px;
        padding: 0 10px;
        text-align: center;
    }
}

.widget-content {
    position: relative;

    :global {
        .row {
            margin-bottom: 5px;
        }
        .row:last-child {
            margin-bottom: 0;
        }
    }
}

.toolbar {
    position: absolute;
    top: 10px;
    left: 10px;

    .btn-group {
        background-color: #fff;
    }
}

.joystick {
    position: absolute;
    top: 5px;
    right: 5px;

    .joystick-button {
        font-size: 14px;
        color: #777;
        text-align: center;
        width: 16px;

        &:hover,
        &:focus {
            cursor: pointer;
            color: #333;
        }
        &:active {
            color: #333;
            text-shadow: 0 1px #ccc;
        }
    }
    .joystick-button[disabled] {
        cursor: not-allowed;
        color: #777;
    }
}

.well {
    height: 20px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    background-color: #f5f5f5;
    border: 1px solid #e3e3e3;
    border-radius: 3px;
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .05);
    margin-bottom: 0;
    padding: 0 5px;
}
