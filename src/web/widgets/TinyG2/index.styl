.widget-content {
    position: relative;
    padding: 10px;

    &.hidden {
        display: none;
    }
}

.widget-content {
    :global {
        .row {
            margin-bottom: 5px;
        }
        .row:last-child {
            margin-bottom: 0;
        }
    }
}

.toolbar {
    margin-bottom: 10px;
}

.panel {
    margin-bottom: 10px;
    &.last {
        margin-bottom: 0;
    }
}
.panel-heading:hover {
    background-color: rgba(0, 0, 0, .05);
}

.well {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    background-color: #f5f5f5;
    border: 1px solid #e3e3e3;
    border-radius: 3px;
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .05);
    line-height: 18px;
    margin-bottom: 0;
    padding: 0 5px;
}
