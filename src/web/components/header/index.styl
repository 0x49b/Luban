.header[data-ns="header"] {
    .navbar-fixed-top {
        border-width: 0;
    }

    .quick-access-toolbar {
        margin: 10px 0;

        [class^="ion-"],
        [class*=" ion-"] {
            &:before {
                font-size: 16px;
                margin-right: 4px;
            }
            &.mirror:before {
                transform: scaleX(-1);
            }
        }

        .btn-group {
            margin-right: 15px;

            &:last-child {
                margin-right: 0;
            }
        }
        .btn {
            height: 30px;
        }

        // Remove the outline on buttons
        button:focus {
            outline: 0;
        }
    }
}
