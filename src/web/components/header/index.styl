.header[data-ns="header"] {

    // https://github.com/react-bootstrap/react-bootstrap/issues/1830
    // FIXME: Remove this workaround once it has fixed
    .navbar-nav .dropdown-toggle {
        -webkit-appearance: initial;
    }

    .navbar-fixed-top {
        border-width: 0;
    }

    .quick-access-toolbar {
        @media (min-width: 768px) {
            float: right;
        }

        margin: 10px 0;

        [class^="ion-"],
        [class*=" ion-"] {
            &:before {
                font-size: 16px;
                margin-right: 4px;
            }
            &.mirror:before {
                transform: scaleX(-1);
            }
        }

        .btn-group {
            float: left;
            margin-right: 15px;

            &:last-child {
                margin-right: 0;
            }
        }
        .btn {
            height: 30px;
        }

        // Remove the outline on buttons
        button:focus {
            outline: 0;
        }
    }
}
