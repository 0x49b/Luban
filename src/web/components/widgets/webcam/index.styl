:global {
    .widget-fullscreen {
        :local {
            .webcam-on-container {
                min-height: 100%;
            }
        }
    }
}

.widget-content {
    position: relative;
    padding: 0;

    &.hidden {
        display: none;
    }
}

.center {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.webcam-on-container {
    min-height: 240px;
    text-align: center;
    overflow: hidden;
    position: relative;
}

.webcam-off-container {
    padding: 10px;
    text-align: center;

    .icon-webcam {
        display: inline-block;
        height: 64px;
        width: 64px;
        background: url("./images/64x64/webcam.png") no-repeat 0 0;
    }
}
