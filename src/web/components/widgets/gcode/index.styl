[data-ns="widgets/gcode"] {
    .widget-content {
        position: relative;
        padding: 10px;

        .gcode-stats {
            padding: 0 5px;

            table[data-table="dimension"] {
                width: 100%;

                thead > tr > th.axis,
                tbody > tr > td.axis {
                    width: 1%;
                }
                tbody > tr > td {
                    text-align: right;
                    &.axis {
                        text-align: center;
                    }
                }
            }

            .row > [class^="col-"] {
                padding-right: 10px;
                padding-left: 10px;
            }

            .row:nth-child(odd) {
                margin-bottom: 10px;
            }
            .row:last-child {
                margin-bottom: 0;
            }
        }

        .gcode-table {
            border: 1px solid #ccc;

            .gcode-table-cell-status {
                border-right: 1px solid #ddd;
                margin-left: 0;
                text-align: center;
            }
            .gcode-table-cell-command {
            }
        }
    }
}
