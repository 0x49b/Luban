//
// Form
//
.form-fields {
    margin: 0 0 50px 0; /* bottom = footer height */
}

.form-actions {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;

    display: block;
    padding: 0 15px;
    border-top: 1px solid #ccc;
    background: #f5f5f5;
    text-align: right;
    line-height: 50px;

    button + button {
        margin-left: 5px;
    }
}
