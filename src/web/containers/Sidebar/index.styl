.navbar {
    position: relative;
}

.nav {
    padding-left: 0;
    margin-bottom: 0;
    list-style: none;

    > li {
        position: relative;
        display: block;

        > a {
            position: relative;
            display: block;
            padding: 15px 10px;
            background-color: #222;
            border-top: 1px solid #222;
            border-bottom: 1px solid #333;
            color: #9d9d9d;
            text-decoration: none;
            white-space: nowrap;
        }
        > a:focus,
        > a:hover {
            color: #fff;
            background-color: #222;
        }
    }
    > li.active {
        > a,
        > a:focus,
        > a:hover {
            color: #fff;
            background-color: #080808;
        }
    }
}
