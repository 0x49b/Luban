.rc-switch {
    position: relative;
    display: inline-block;
    box-sizing: border-box;
    width: 60px;
    height: 22px;
    line-height: 20px;
    vertical-align: middle;
    border-radius: 20px 20px;
    border: 1px solid #ccc;
    background-color: #ccc;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.35, 0, 0.25, 1);
}
.rc-switch-inner {
    color: #fff;
    font-size: 75%;
    position: absolute;
    left: 20px;
    right: 5px;
    text-align: center;
}
.rc-switch:after {
    position: absolute;
    top: 0;
    left: 0;
    width: 20px;
    height: 20px;
    border-radius: 50% 50%;
    background-color: #ffffff;
    content: " ";
    cursor: pointer;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.26);
    transform: scale(1);
    transition: left 0.3s cubic-bezier(0.35, 0, 0.25, 1);
    animation-timing-function: cubic-bezier(0.35, 0, 0.25, 1);
    animation-duration: 0s;
    animation-name: rcSwitchOff;
}
.rc-switch:hover:after {
    transform: scale(1.1);
    animation-name: rcSwitchOn;
}
.rc-switch-checked {
    border-width: 1px;
    border-style: solid;
    border-color: #435a8b #3c5488 #334c83;
    background-color: #4e69a2;
}
.rc-switch-checked .rc-switch-inner {
    font-size: 75%;
    left: 5px;
    right: 20px;
    text-align: center;
}
.rc-switch-checked:after {
    left: 38px;
}
.rc-switch-checked[disabled],
.rc-switch-checked.rc-switch-disabled {
    cursor: not-allowed;
    box-shadow: none;
    opacity: .65;
}
.rc-switch-disabled {
    cursor: no-drop;
    background: #ccc;
    border-color: #ccc;
}
.rc-switch-disabled:after {
    background: #9e9e9e;
    animation-name: none;
    cursor: no-drop;
}
.rc-switch-disabled:hover:after {
    transform: scale(1);
    animation-name: none;
}
.rc-switch-label {
    display: inline-block;
    line-height: 20px;
    font-size: 14px;
    padding-left: 10px;
    vertical-align: middle;
    white-space: normal;
    pointer-events: none;
    user-select: text;
}
@keyframes rcSwitchOn {
    0% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.25);
    }
    100% {
        transform: scale(1.1);
    }
}
@keyframes rcSwitchOff {
    0% {
        transform: scale(1.1);
    }
    100% {
        transform: scale(1);
    }
}
